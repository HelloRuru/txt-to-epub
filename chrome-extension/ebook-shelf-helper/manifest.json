{
  "manifest_version": 3,
  "name": "eBook Shelf Helper",
  "version": "1.0.0",
  "description": "從讀墨 Readmoo、樂天 Kobo 撈取你的電子書書櫃，匯出 JSON 做跨平台去重比對。",
  "permissions": ["cookies", "scripting", "tabs"],
  "host_permissions": [
    "https://api.readmoo.com/*",
    "https://readmoo.com/*",
    "https://*.readmoo.com/*",
    "https://storeapi.kobo.com/*",
    "https://*.kobo.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
