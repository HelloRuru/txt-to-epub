{
  "manifest_version": 3,
  "name": "Post Writer - 社群貼文排版",
  "version": "1.0.0",
  "description": "解決 Facebook、Instagram、Threads 貼文換行消失問題。Side Panel 排版工具，支援雜誌感設計排版與 Broetry 文體。",
  "author": "Kaoru Tsai",
  "homepage_url": "https://tools.helloruru.com/post-writer/",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "開啟 Post Writer",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "sidePanel",
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  "minimum_chrome_version": "120"
}
